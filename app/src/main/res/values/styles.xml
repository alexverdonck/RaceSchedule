<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="ItemNextSession">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.RaceSchedule.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.RaceSchedule.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>